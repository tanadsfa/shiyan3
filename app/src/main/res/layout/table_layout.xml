<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"> <!-- 自动拉伸第二列以填满可用空间 -->

    <!-- 第一行 -->
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="10dp"
            android:text="Open..."
            android:textSize="18sp" />
        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Ctrl+O"
            android:gravity="right"
            android:textSize="18sp" />
    </TableRow>

    <!-- 第二行 -->
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="10dp"
            android:text="Save..."
            android:textSize="18sp" />
        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Ctrl+S"
            android:gravity="right"
            android:textSize="18sp" />
    </TableRow>

    <!-- 第三行 -->
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="10dp"
            android:text="Save As..."
            android:textSize="18sp" />
        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Ctrl+Shift+S"
            android:gravity="right"
            android:textSize="18sp" />
    </TableRow>

    <!-- 第四行 -->
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="10dp"
            android:text="Import..."
            android:textSize="18sp" />
        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Ctrl+I"
            android:gravity="right"
            android:textSize="18sp" />
    </TableRow>

    <!-- 第五行 -->
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="10dp"
            android:text="Export..."
            android:textSize="18sp" />
        <TextView
            android:layout_column="1"
            android:padding="10dp"
            android:text="Ctrl+E"
            android:gravity="right"
            android:textSize="18sp" />
    </TableRow>

    <!-- 第六行 -->
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="10dp"
            android:text="Quit"
            android:textSize="18sp" />
    </TableRow>

</TableLayout>
